%p.pull-right
  = link_to posts_path, :class => 'btn' do
    %i.icon-arrow-left
    Back
.post
  %h1= @post.title
  - if can? :manage, @post
    .btn-group
      %a.btn.dropdown-toggle{:'data-toggle' => "dropdown"}
        Action
        %span.caret
      %ul.dropdown-menu
        %li= link_to 'Edit', edit_post_path(@post)
        %li.divider
        %li= link_to 'Destroy', @post, :confirm => 'Are you sure?', :method => :delete
  :markdown
    #{@post.body}
  %small
    Posted by
    %span.label= @post.user_name
    at
    = @post.created_at.strftime('%m/%d/%Y %H:%M')

.row.comments
  .span6
    %h4
      %i.icon-comment
      = pluralize(@post.comments.count, 'Comment')
    - @post.comments.already_approved.each do |comment|
      .comment
        %b= comment.from
        %small= "(#{distance_of_time_in_words_to_now comment.created_at} ago)"
        :markdown
          #{comment.message}
        - if can? :destroy, comment
          = link_to 'Destroy', @post, :confirm => 'Are you sure?', :method => :delete
  .span6
    %h4
      Send a comment
    = simple_form_for [@post, @comment] do |f|
      = f.input :from,    :input_html => {:class => 'span6', :rows => 5}
      = f.input :message, :input_html => {:class => 'span6', :rows => 5}
      .form-actions
        = f.submit :class => 'btn-primary'
      