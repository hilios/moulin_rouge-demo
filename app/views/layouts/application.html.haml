!!!5
%html
  %head
    :ruby
      title = "%s"
      title = yield(:title) if content_for?(:title)
    %title= title % "Moulin Rouge Demo"
    = stylesheet_link_tag    "application", :media => "all"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to "Moulin Rouge", root_path, :class => :brand
          %ul.nav
            %li{:class => activate_if(controller_is? :posts)}
              = link_to posts_path do
                %i.icon-list.icon-white
                Posts
            - if can? :manage, User
              %li
                = link_to users_path do
                  %i.icon-user.icon-white
                  Users
            - if can? :manage, Role
              %li
                = link_to roles_path do
                  %i.icon-tag.icon-white
                  Roles
          %ul.nav.pull-right
            %li.divider-vertical
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{:'data-toggle' => 'dropdown'}
                  = current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to edit_user_path do
                      %i.icon-user
                      Meus dados
            - else
              %li
                = link_to "Sign in", new_user_session_path
          = form_for :search, :html => {:class => "navbar-search pull-right", :method => :get} do |f|
            = f.text_field :q, :class => "search-query span2", :placeholder => "Search"
    .container
      %header.page-header
        %h1
          Sample Blog
          %br
          %small This is an example application using the Moulin Rouge gem to manage CanCan authorization system.
      = yield
    = javascript_include_tag "application"